{
    "version": 3,
    "configurePresets": [
        {
            "name": "g++-release-config",
            "inherits": "default-release-config",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG",
                "CMAKE_PREFIX_PATH": "<PATH_TO_QT6>"
            }
        },
        {
            "name": "g++-debug-config",
            "inherits": "default-debug-config",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_DEBUG": "-Wall -Wextra -Werror -pedantic",
                "CMAKE_PREFIX_PATH": "<PATH_TO_QT6>"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "g++-release-build",
            "description": "Build preset that inherits from g++-release-config",
            "configurePreset": "g++-release-config",
            "targets": [
                "calculator"
            ],
            "cleanFirst": true,
            "verbose": false,
            "jobs": 8
        },
        {
            "name": "g++-debug-build",
            "description": "Build preset that inherits from g++-debug-config",
            "configurePreset": "g++-debug-config",
            "targets": [
                "all"
            ],
            "cleanFirst": false,
            "verbose": true,
            "jobs": 8
        }
    ]
}