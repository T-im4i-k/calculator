{
    "version": 3,
    "configurePresets": [
        {
            "name": "g++-release",
            "inherits": "default-release",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG"
            }
        },
        {
            "name": "g++-debug",
            "inherits": "default-debug",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_CXX_FLAGS_DEBUG": "-Wall -Wextra -Werror -pedantic"
            }
        }
    ]
}