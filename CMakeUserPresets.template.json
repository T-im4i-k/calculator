{
    "version": 3,
    "configurePresets": [
        {
            "name": "clang-release-config",
            "description": "Relase config with clang compiler",
            "inherits": "default-release-config",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG",
                "CMAKE_PREFIX_PATH": "<QT6_PATH>"
            }
        },
        {
            "name": "clang-debug-config",
            "description": "Debug config with clang compiler",
            "inherits": "default-debug-config",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 -Wall -Wextra -Werror -pedantic",
                "CMAKE_PREFIX_PATH": "<QT6_PATH>"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "clang-release-build",
            "description": "Release build with clang config",
            "inherits": "default-release-build",
            "configurePreset": "clang-release-config"
        },
        {
            "name": "clang-debug-build",
            "description": "Debug build with clang config",
            "inherits": "default-debug-build",
            "configurePreset": "clang-debug-config"
        }
    ],
    "testPresets": [
        {
            "name": "clang-test",
            "description": "Test preset with clang config",
            "inherits": "default-test",
            "configurePreset": "clang-debug-config"
        }
    ]
}